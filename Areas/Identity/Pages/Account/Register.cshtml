@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@{
 Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="limiter">
     <div asp-validation-summary="All" class="text-danger"></div>
		<div class="container-login100">
			<div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
				<form class="login100-form validate-form flex-sb flex-w" asp-route-returnUrl="@Model.ReturnUrl" method="post">
					<span class="login100-form-title p-b-32">
						Register
					</span>

					<span class="txt1 p-b-11">
						Username
					</span>
					<div class="wrap-input100 validate-input m-b-36" >
						<input class="input100" type="text" asp-for="Input.Email" >
                         <span asp-validation-for="Input.Email" class="text-danger"></span>
						<span class="focus-input100"></span>
					</div>
					
					<span class="txt1 p-b-11">
						Password
					</span>
					<div class="wrap-input100 validate-input m-b-12" >
						<span class="btn-show-pass">
							<i class="fa fa-eye"></i>
						</span>
						<input class="input100" type="password" asp-for="Input.Password">
						<span class="focus-input100"></span>
					</div>
                    <span class="txt1 p-b-11">
						Confirm Password
					</span>
					<div class="wrap-input100 validate-input m-b-12">
						<span class="btn-show-pass">
							<i class="fa fa-eye"></i>
						</span>
						<input class="input100" type="password" asp-for="Input.ConfirmPassword">
						<span class="focus-input100"></span>
					</div>
					
					
						
				

					<div class="container-login100-form-btn">
						<button class="login100-form-btn" type="submit">
							Register
						</button>
                        <a href="Identity/Account/Login"> Login </a>
					</div>

				</form>
			</div>
		</div>
	</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
